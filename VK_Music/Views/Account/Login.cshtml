@model VK_Music.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
@section MyScript {
    <script type="text/javascript">
        function ShowHidden() {
            tbox = document.getElementById("my_textbox");
            if (tbox.style.display == "inline") {
                tbox.style.display = 'none';
            }
            else {
                tbox.style.display = 'inline';
            }

        };
    </script>
}

