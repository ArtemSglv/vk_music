@model VK_Music.Models.Album

@{
    ViewBag.Title = "Album "+Model.Title;
}

<h2>Album @Model.Title</h2>

<div align="right">Привет, @User.Identity.Name! @Html.ActionLink("[Выйти]", "Logoff", "Account")</div>

@Html.ActionLink("К списку альбомов","ShowAllAlbums","Album")
<br />
<table>
    <tr>
        <th>Photo</th>
        <th>Likes</th>
    </tr>
    @foreach (var p in Model.Photos)
    {
        <tr>
            <td>
                <img src="@p.Path" />
            </td>
            <td>@p.Likes</td>
        </tr>
    }
</table>

